          ],
          "effects": [
            {
              "type": "addFlag",
              "flag": "Whispers_AdvisorsTwist",
              "amount": 1
            }
          ],
          "text": "She hesitates, then mutters: 'The chief’s advisors twist every tale.'",
          "next": "arrival"
        },
